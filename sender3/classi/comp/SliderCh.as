package classi.comp {	import flash.display.Sprite;	import flash.geom.Point;	import flash.events.*;	import flash.utils.setInterval;	import flash.utils.clearInterval;	import flash.geom.Rectangle;	import classi.main.Rett;	import classi.comp.ButtonTxt;	public class SliderCh extends Sprite {		var curs:Sprite;		var path:Sprite;		var h:Number;//		function SliderCh(xx:Number,yy:Number,ww,hh,f:Function, alt:String) {		function SliderCh(xx,yy,ww,hh,f,alt) {						this.x = xx;			this.y = yy;			h = hh;			fnz = f;			path = new Rett(0,0,ww,hh,null,0x999999,1);			curs = new ButtonTxt(0, 0, ww, 10, "100", myPress, null, alt);			this.addChild(path);			this.addChild(curs);			this.curs.mouseUpAcivation(myRelease);			this.curs.useHandCursor = false;		}		function enterFrameHandler(a) {			var tmp = -((this.curs.y/(this.path.height-this.curs.height))-1)*100;			this.curs.lab.text = int(tmp);			fnz(tmp);		}		function myPress(a) {			this.curs.startDrag(false, new Rectangle(0, 0, 0, h-10));			this.addEventListener(Event.ENTER_FRAME, enterFrameHandler);		}		function myRelease() {			this.curs.stopDrag();			this.removeEventListener(Event.ENTER_FRAME, enterFrameHandler);		}	}}